@model IEnumerable<CYInfo.CMKWeb.Models.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrandPrefix)
        </th>
        <th></th>
    </tr>
@{int i = 0;
foreach (var item in Model) {
    
    if(i%4==0)
    {
        @(new HtmlString("<tr><td>"));
            @Html.DisplayFor(modelItem => item.BrandPrefix);
                     @(new HtmlString("<table>"));
                     foreach (var brandname in item.BrandName)
                     {
                        @(new HtmlString("<tr><td>"));
                        @Html.ActionLink(@brandname, "GetSiezeChartByBrandName", "SizeCharts", new { brandName = @brandname }, new { })
                        @(new HtmlString("</td><tr>"));
                     }
                     @(new HtmlString("</table>"));
            @(new HtmlString("</td>"));
    }
    else if (i % 4 == 1 || i % 4 == 2)
    {
        @(new HtmlString("<td>"));
        @Html.DisplayFor(modelItem => item.BrandPrefix);
                    @(new HtmlString("<table>"));
                    foreach (var brandname in item.BrandName)
                    {
                        @(new HtmlString("<tr><td>"));
                    @Html.ActionLink(@brandname, "GetSiezeChartByBrandName", "SizeCharts", new { brandName = @brandname }, new { })
                    @(new HtmlString("</td><tr>"));
                    }
                    @(new HtmlString("</table>"));
        @(new HtmlString("</td>"));
    }
    else if (i % 4 == 3)
    {
        @(new HtmlString("<td>"));
        @Html.DisplayFor(modelItem => item.BrandPrefix);

                    @(new HtmlString("<table>"));
                    foreach (var brandname in item.BrandName)
                    {
                        @(new HtmlString("<tr><td>"));
                    @Html.ActionLink(@brandname, "GetSiezeChartByBrandName", "SizeCharts", new { brandName = @brandname }, new { })
                    @(new HtmlString("</td><tr>"));
                    }
                    @(new HtmlString("</table>"));

        @(new HtmlString("</tr></td>"));
    }
    i++;

   
}
}

</table>
